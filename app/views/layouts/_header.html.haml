      %form.navbar-form.navbar-left{:role => "search"}
        .form-group
          %input.form-control{:placeholder => "Search", :type => "text"}
        %button.btn.btn-default{:type => "submit"} Submit
      %ul.nav.navbar-nav
        -if user_signed_in?

          %li{:class => "#{'active' if current_page?(user_path(current_user))} dropdown"}
            %a.glyphicon.glyphicon-user.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}        
              /=image_tag "user_icon.png", class: "user-icon"
              .user-icon.pull-left
              %b.caret
            %ul.dropdown-menu
              %p.nav-you YOU
              %li
                =link_to current_user.name, user_path(current_user)
