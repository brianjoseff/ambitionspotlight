              /   =link_to "Settings", user_settings_path
              / %li
              /   = link_to "Sign Up", new_user_registration_path
              %li
                =link_to 'Edit Profile', edit_user_registration_path(current_user)
              %li
                =link_to "Sign out", destroy_user_session_path, :method => :delete
                  
          / %li
          /   =link_to "SIGN OUT", destroy_user_session_path, :method => :delete
        -else
          %li
            =link_to "SIGN UP", new_user_registration_path
