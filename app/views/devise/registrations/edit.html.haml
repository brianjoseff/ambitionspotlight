/VERSION 2

.row
  .col-lg-2
  .user-card-container
    .col-lg-8.user-card
      .text-center
        %h2
          Edit #{resource_name.to_s.humanize}
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = devise_error_messages!
        -resource.assets.build unless resource.assets.first
        .user-details-edit.text-center
          .form-group
            = f.label :email, class: 'control-label'
            .controls
              = f.email_field :email, autofocus: true, class: "form-control text-center", :placeholder => "big@dog.com"
          - if devise_mapping.confirmable? && resource.pending_reconfirmation?
            %div
              Currently waiting confirmation for: #{resource.unconfirmed_email}
          
          .change-password-veil{style:"display:none;"}
            .form-group
              = f.label :password, class: 'control-label'
              %i ( leave blank if you don't want to change it )
              %br/
              = f.password_field :password, autocomplete: "off", class: "form-control text-center"
            .form-group
              = f.label :password_confirmation, class: 'control-label'
              .controls
                = f.password_field :password_confirmation, autocomplete: "off", class: "form-control text-center"
          .form-group
            = f.label :current_password, class: 'control-label'
            %i ( To Make Changes )
            .controls
              = f.password_field :current_password, autocomplete: "off", class: "form-control text-center"
              
          = link_to "Forgot your password?", new_password_path(resource_name)
          
          %a{href:"#", class: "change-password"} | Change Your Password

        
          
          .submit.text-center
            =f.submit "Update", class: "btn btn-primary submit-button follow-button"
          
        /NAME
        .story-name-edit
          .controls
            =f.text_field :name, type: "text", class: "form-control text-center", :placeholder => "Eugene Jackson"
          
        /PROFILE PHOTO

        .profile-pic
          .round-border
            .round.round-center
              -if !@user.profile_photo
                =link_to image_tag(@user.profile_photo.nil?  ? '/assets/user-placeholder.png': @user.profile_photo.url(:medium), :alt => @user.name, class: "circle-image"), user_path(@user)
              -else
                =link_to image_tag(@user.assets.empty?  ? '/assets/user-placeholder.png': @user.assets.first.image.url(:medium), :alt => @user.name, class: "circle-image"), user_path(@user)
        .form-group

          .image-field
            = f.file_field :profile_photo, type:"file"     
                
                
        /AMBITION              
        .text-center 
          .story
            .story-header
              %p WHERE I WANT TO BE IN 5 YEARS...
            .story-text
              .controls
                = f.text_area :ambition, type:"text",autofocus: true, class: "form-control text-center", :placeholder => "Running my own technology company and giving back to East Palo Alto through mentorship, philanthropy, and the multiplier effect", :rows => "5"
              /%p=@user.ambition


          /CURRENT ACTIVITIES (3 focuses)
          .story-header
            %p WHAT I'M DOING TO GET THERE...
          .story
            .current-activities
              .controls
                = f.text_area :current_activities, type:"text", autofocus: true, class: "form-control text-center", :placeholder => "Training, building a world-class gym at my house, mentoring kids in EPA", :rows => "5"

          /BIO            
          .story
            .story-header
              %p WHO I AM...
            .story
              .story-bio
                .controls
                  = f.text_area :bio, type:"text", autofocus: true, class: "form-control", :placeholder => "Tell us who you are and where you come from...", :rows => "5"
    
          

          
          .submit
            =f.submit "Update", class: "btn btn-primary submit-button follow-button"
          %br/
