-if @followers
  -@followers.each_with_index do |f, i|
    %div{class: "#{ i % 3 == 0 || i == 0 ? 'row' : ''}" }
    .col-sm-4
      .follower-pic-name.text-center
        .round-thumbnail
          =link_to image_tag(f.profile_photo.nil?  ? '/assets/user-placeholder-follower.png': f.profile_photo.url(:small), :alt => f.name, class: "circle-image")
        %p=f.name
