.container
  .row
    .col-lg-3.sidebar
      /Trending Actions
      .trending.card
        =render 'pages/trending_actions'
      
      /Lists
      /render top 3 lists
      .lists.card
        =render 'pages/trending_lists'
      
      /Leaders
      /render top 3 local leaders
      .leaders.card
        =render 'pages/local_leaders'

    .col-lg-8
      #search_bar
        /=render partial: 'search/search'

      #list.card

        %h1
          / %span //
          =@list.title
        %h4.text-center
          by
          #{link_to @list.user.name, user_path(@list.user)}
        %ul
          -@list.actions.each do |a|
            %li
              %a.pretty-link.bangbang-pretty-link{href:"/bangbang/1"}
                %span !!
                =a.title
              %p Text describing this action. should probably limit to like 140 char or something liek taht
      #stream.card
        =render @items