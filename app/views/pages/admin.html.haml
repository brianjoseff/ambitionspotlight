-@leaders.each do |leader|
  =leader.name
  -if leader.spotlight
  
    =form_for leader.spotlight, url: spotlight_path(leader.spotlight) do |f|
      =hidden_field_tag 'user_id', leader.id
      =f.file_field :image, type: "file"
    
      =f.submit
  -else
    =form_for leader.build_spotlight do |f|
      =hidden_field_tag 'user_id', leader.id
      =f.file_field :image, type: "file"
    
      =f.submit